{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "outDir": "./build/",
    "target": "es5",
    "jsx": "react",
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "es2019", "es2015.iterable", "scripthost"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}
